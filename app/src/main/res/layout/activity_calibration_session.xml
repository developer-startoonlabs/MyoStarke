<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sai.pheezeeapp.Activities.CalibrationSession">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body Part: "
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tv_bodypart"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Id:"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_calibration_patientid"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Name:"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_calibration_patientname"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please get the patient in desired position."
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tv_relax_or_tight"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_session_about_to_start"
                android:text="Session about to start in"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:visibility="invisible"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tv_about_to_start"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:visibility="invisible"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sucessfully_recorded"
                android:text="Recording values please wait"
                android:visibility="invisible"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min Emg:"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_min_emg"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Emg:"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_max_emg"
                    android:textColor="#527387"
                    android:fontFamily="@font/ebrima"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tv_session_status"
                android:textColor="#527387"
                android:fontFamily="@font/ebrima"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="40dp">
            <Button
                android:id="@+id/btn_start_calibration_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
