<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.startoonlabs.apps.pheezee.dfu.DfuActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FILE DETAILS"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lnl_filedetails"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="File Name:" />

        <TextView
            android:id="@+id/tv_dfu_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="128dp"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/tv_dfu_filetype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="49dp"
            android:text="Type:"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/tv_dfu_file_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_dfu_file_name"
            android:layout_alignTop="@+id/tv_dfu_filetype" />

        <TextView
            android:id="@+id/tv_dfu_filescope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dfu_filetype"
            android:layout_alignParentStart="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="13dp"
            android:text="Scope:" />

        <TextView
            android:id="@+id/tv_dfu_filestate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dfu_filescope"
            android:layout_alignEnd="@+id/tv_dfu_filescope"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="-13dp"
            android:layout_marginBottom="54dp"
            android:text="Size:" />

        <TextView
            android:id="@+id/tv_dfu_filestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_dfu_filescope"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="-28dp"
            android:layout_marginBottom="28dp"
            android:text="Status:" />

        <TextView
            android:id="@+id/tv_dfu_file_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_dfu_file_name"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_dfu_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_dfu_file_name"
            android:layout_alignTop="@+id/tv_dfu_filestate" />

        <TextView
            android:id="@+id/tv_dfu_file_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_dfu_file_name"
            android:layout_alignBottom="@+id/tv_dfu_filestatus" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_dfu_select_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:text="SELECT FILE" />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp">

        <Button
            android:id="@+id/btn_dfu_file_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:enabled="false"
            android:text="UPLOAD" />

        <TextView
            android:id="@+id/textviewUploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:freezesText="true"
            android:text="@string/dfu_status_uploading"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progressbar_file"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="34dp"
            android:max="100"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textviewProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:freezesText="true"
            android:text="@string/dfu_uploading_percentage_label"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>
