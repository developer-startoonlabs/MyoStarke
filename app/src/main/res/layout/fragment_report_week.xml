


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.sai.pheezeeapp.Fragments.ReportWeek">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/left_week"
            android:src="@drawable/back_arrow_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/right_week"
            android:src="@drawable/right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/pitch_black"
            android:text="4-10/02/2019"
            app:layout_constraintEnd_toStartOf="@+id/iv_right"
            app:layout_constraintStart_toEndOf="@+id/iv_left"
            app:layout_constraintTop_toTopOf="parent" />





        <TextView
            android:id="@+id/tv_overall_summary_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/pitch_black"
            android:text=""
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_report_date" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/darkGray"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_overall_summary_report"></LinearLayout>


        <ImageView
            android:id="@+id/iv_left_joint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/left_joint"
            android:src="@drawable/back_arrow_choice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

        <ImageView
            android:id="@+id/iv_right_joint"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:contentDescription="@string/right_joint"
            android:src="@drawable/right_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

        <TextView
            android:id="@+id/tv_individual_joint_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:text="Knee "
            android:textColor="@color/pitch_black"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_joint"
            app:layout_constraintStart_toEndOf="@+id/iv_left_joint"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


        <com.anychart.AnyChartView
            android:id="@+id/rom_chartView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_individual_joint_name">
        </com.anychart.AnyChartView>

        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:id="@+id/week_rom_graph"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_individual_joint_name">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.example.sai.pheezeeapp.views.custom_graph.EmonjiBarGraph
                    android:id="@+id/graphView"
                    android:layout_width="610dp"
                    android:layout_height="360dp"
                    app:barGap="20dp"
                    app:barHeight="300dp"
                    app:barWidth="65dp"
                    app:colorArray="@array/color_array"
                    app:emonjiArray="@array/emonji_array"
                    app:emonjiDimension="45dp"
                    app:barNum="7"
                    app:lowerLineColor="@color/colorPrimary"
                    app:upperLineColor="@color/colorPrimary"/>
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/ll_tv_rom"
            android:background="@drawable/background_session_report_dwm"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/week_rom_graph">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="15sp"
                android:text="@string/range_of_motion"
                android:textColor="@color/pitch_black"
                android:alpha="0.85"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/improvement_rom_report"
            app:layout_constraintTop_toBottomOf="@id/ll_tv_rom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:layout_marginEnd="8dp"/>



        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@color/darkGray"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_tv_rom"></LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/emg_barchart_report"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"></com.github.mikephil.charting.charts.BarChart>

        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:id="@+id/week_emg_graph"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.example.sai.pheezeeapp.views.custom_graph.EmonjiBarGraph
                    android:id="@+id/graphView_emg"
                    android:layout_width="610dp"
                    android:layout_height="360dp"
                    app:barGap="20dp"
                    app:barHeight="300dp"
                    app:barWidth="65dp"
                    app:colorArray="@array/color_array"
                    app:emonjiArray="@array/emonji_array"
                    app:emonjiDimension="45dp"
                    app:barNum="7"
                    app:lowerLineColor="@color/colorPrimary"
                    app:upperLineColor="@color/colorPrimary"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/ll_emg"
            android:background="@drawable/background_session_report_dwm"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/week_emg_graph">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="15sp"
                android:text="@string/emg"
                android:textColor="@color/pitch_black"
                android:alpha="0.85"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/improvement_emg_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_emg"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:text=""
            android:layout_marginEnd="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pitch_black"
            android:alpha="0.8"
            android:text="@string/back"
            android:id="@+id/tv_back_report"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/improvement_emg_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_back_report"></LinearLayout>




    </android.support.constraint.ConstraintLayout>
</ScrollView>
