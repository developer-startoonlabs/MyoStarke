<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coordinator_patient_option"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@color/white_opaque"
    app:backgroundTint="@color/white_opaque"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_patient_section"
            android:layout_height="80dp"
            android:paddingRight="5dp"
            android:background="@drawable/patient_item_layout"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_view_shape"
                    android:backgroundTint="#4b7080">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/patient_profilepic_section"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="0dp"
                        android:src="@drawable/patient_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/patient_info_section"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:longClickable="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                <TextView
                    android:id="@+id/tv_patient_name_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ebrima"
                    android:text="sai"
                    android:textColor="@color/pitch_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_patient_joindate_section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ebrima"
                    android:text=""
                    android:alpha="0.5"
                    android:textColor="@color/pitch_black"
                    android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_patient_id_section"
                        android:fontFamily="@font/ebrima"
                        android:alpha="0.5"
                        android:text="id :"
                        android:textColor="@color/pitch_black"
                        android:textSize="18sp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ebrima"
                        android:text=""
                        android:enabled="false"
                        android:visibility="invisible"
                        android:textColor="#808080"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_patient_section"
            android:id="@+id/ll_report">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/report_logo"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:alpha="0.65"
                    android:textColor="@color/pitch_black"
                    android:fontFamily="@font/ebrima"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ll_calibration"
            app:layout_constraintTop_toBottomOf="@+id/ll_report"
            android:onClick="startCalibrationSession"
            app:layout_constraintBottom_toTopOf="@+id/ll_mmt">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight="0.2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/calibration_logo"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="17dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calibration"
                    android:alpha="0.65"
                    android:textColor="@color/pitch_black"
                    android:fontFamily="@font/ebrima"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="startMmtSession"
        android:id="@+id/ll_mmt"
        app:layout_constraintTop_toBottomOf="@+id/ll_calibration"
        app:layout_constraintBottom_toTopOf="@+id/ll_set_goal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="0.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/mmt_logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MMT"
                android:alpha="0.65"
                android:textColor="@color/pitch_black"
                android:fontFamily="@font/ebrima"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_set_goal"
        app:layout_constraintTop_toBottomOf="@+id/ll_mmt"
        app:layout_constraintBottom_toTopOf="@+id/ll_mmt">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="0.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/goal_logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Goal"

                android:textColor="@color/pitch_black"
                android:fontFamily="@font/ebrima"
                android:alpha="0.65"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="editThePatientDetails"
        android:id="@+id/ll_edit_patient_details"
        app:layout_constraintTop_toBottomOf="@+id/ll_set_goal"
        app:layout_constraintBottom_toTopOf="@+id/ll_delete_patient">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="0.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/edit_logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"

                android:textColor="@color/pitch_black"
                android:fontFamily="@font/ebrima"
                android:alpha="0.65"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_delete_patient"
        android:onClick="deletePatient"
        app:layout_constraintTop_toBottomOf="@+id/ll_edit_patient_details">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="0.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/delete_logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/pitch_black"
                android:fontFamily="@font/ebrima"
                android:alpha="0.65"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_help"
        app:layout_constraintTop_toBottomOf="@+id/ll_delete_patient">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="0.2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/help_logo"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="17dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:alpha="0.65"
                android:textColor="@color/pitch_black"
                android:fontFamily="@font/ebrima"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>






</android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>